<link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
<link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>

<script type="importmap">
  {
    "imports": {
      "@troop-themes/main": "{{ 'theme.js' | asset_url }}"
    }
  }
</script>

{%- assign font_heading_url = settings.typography--heading | font_url -%}
{%- unless font_heading_url == blank -%}
  <link
    rel="preload"
    href="{{ font_heading_url }}"
    as="font"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}

