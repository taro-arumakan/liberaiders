{%- liquid
  assign bg_color = section.settings.background-color
  assign border_enabled = section.settings.border-enabled
  assign container_width = section.settings.container-width
  assign mobile_full_width = section.settings.mobile-full-width
  assign mobile_spacing_above = section.settings.mobile-spacing-above
  assign mobile_spacing_below = section.settings.mobile-spacing-below
  assign spacing_above = section.settings.spacing-above
  assign spacing_below = section.settings.spacing-below
  assign white_border = section.settings.white-border
-%}

<div
  class="divider--root"
  data-section-id="{{ section.id }}"
  data-background-color="{{ bg_color }}"
  data-container-width="{{ container_width }}"
  data-mobile-full-width="{{ mobile_full_width }}"
  data-mobile-spacing-above="{{ mobile_spacing_above }}"
  data-mobile-spacing-below="{{ mobile_spacing_below }}"
  data-spacing-above="{{ spacing_above }}"
  data-spacing-below="{{ spacing_below }}"
  data-white-border="{{ white_border }}"
>
  {%- if border_enabled -%}
    <div class="divider--wrapper"></div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Divider",
  "class": "section--divider",
  "settings": [
    {
      "type": "header",
      "content": "General layout"
    },
    {
      "id": "border-enabled",
      "label": "Show border",
      "type": "checkbox",
      "default": true,
    },
    {
      "id": "white-border",
      "label": "White border",
      "type": "checkbox",
      "default": false,
    },
    {
      "id": "spacing-above",
      "label": "Spacing above",
      "type": "select",
      "options": [
        {
          "label": "None",
          "value": "none"
        },
        {
          "label": "Half",
          "value": "half"
        },
        {
          "label": "Full",
          "value": "full"
        }
      ],
      "default": "half"
    },
    {
      "id": "spacing-below",
